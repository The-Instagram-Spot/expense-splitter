%h1 Edit group
= form_with(model: @groups, local: true) do |form|
  %p
    = form.label :group_name
    %br/
    = form.text_field :group_name
  %p
    = form.label :group_description
    %br/
    = form.text_area :group_description
  %p
    = form.submit

= link_to 'Delete Group', group_path(@groups), method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'Back', groups_path
