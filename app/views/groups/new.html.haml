.topnav
  <img src="https://img.icons8.com/cotton/50/000000/money-transfer.png" alt="money logo" class="images"/>
  DinDiv
  = link_to 'Back', groups_path
%div#body

  %div#pageTitle Creating New Group
   
  = form_with scope: :group, url: groups_path, local: true do |form|
    - if @groups.errors.any?
      #error_explanation
        %h2
          = pluralize(@groups.errors.count, "error")
          prohibited
          this article from being saved:
        %ul
          - @groups.errors.full_messages.each do |msg|
            %li= msg
    %p#formLabels
      = form.label :group_name
      %br/
      = form.text_field :group_name, class: "textBox"
    %p#formLabels
      = form.label :group_description
      %br/
      = form.text_area :group_description, class: "textBox"
    %p
      = form.submit
  %br/

