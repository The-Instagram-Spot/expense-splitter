!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "profile email", :name => "google-signin-scope"}/
    %meta{:content => "784382473737-ff9vrd0ejnns70uapa7vc2g7jfk675k7.apps.googleusercontent.com", :name => "google-signin-client_id"}/
    %script{:async => "", :defer => "defer", :src => "https://apis.google.com/js/platform.js"}
   
  %body
  %div
    
    %a= link_to 'New Group', new_group_path
  %div

    %h1 Groups
    %table
      %tr
        %th Title
        %th Text
        %th
      - @groups.each do |group|
        %tr
          %td= group.group_name
          %td= group.group_description
          %td= link_to 'Show', group_path(group)
          %td= link_to 'Edit', edit_group_path(group)
          %td= link_to 'Delete', group_path(group), method: :delete, data: { confirm: 'Are you sure?' }
            
    .g-signin2{"data-onsuccess" => "onSignIn", "data-theme" => "dark"}
    :javascript
      function onSignIn(googleUser) {
        // Useful data for your client-side scripts:
        var profile = googleUser.getBasicProfile();
        console.log("ID: " + profile.getId()); // Don't send this directly to your server!
        console.log('Full Name: ' + profile.getName());
        console.log('Given Name: ' + profile.getGivenName());
        console.log('Family Name: ' + profile.getFamilyName());
        console.log("Image URL: " + profile.getImageUrl());
        console.log("Email: " + profile.getEmail());

        // The ID token you need to pass to your backend:
        var id_token = googleUser.getAuthResponse().id_token;
        console.log("ID Token: " + id_token);
      }

      

