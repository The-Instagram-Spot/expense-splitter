= render 'transactions/form'

- @transactions.users.each do |user|
  = user.name
  - if(user.amounts.find_by(user_id: user.id, transaction_id: @transactions.id).difference < 0)
    owes
    = 0 - user.amounts.find_by(user_id: user.id, transaction_id: @transactions.id).difference
  - else
    is owed
    = user.amounts.find_by(user_id: user.id, transaction_id: @transactions.id).difference
  %td= link_to 'Remove from transaction', destroy_from_transaction_path(user), method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  
    
= link_to 'Back', group_path(@transactions.group)
